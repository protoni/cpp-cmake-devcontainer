    {
      "name": "valgrind",
      "type": "cppdbg",
      "request": "launch",
      "program": "/usr/bin/valgrind",
      "args": ["--leak-check=full", "--show-leak-kinds=all", "--track-origins=yes", "/app/build/cpp_test"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
